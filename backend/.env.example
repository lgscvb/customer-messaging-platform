# 應用配置
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# 數據庫配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=customer_messaging
DB_USER=postgres
DB_PASSWORD=postgres

# JWT 配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# LINE 配置
LINE_ENABLED=false
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_API_ENDPOINT=https://api.line.me

# Facebook 配置
FACEBOOK_ENABLED=false
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_VERIFY_TOKEN=your_facebook_verify_token
FACEBOOK_API_VERSION=v18.0

# 網站配置
WEBSITE_ENABLED=true
WEBSITE_API_KEY=your_website_api_key
WEBSITE_WEBHOOK_SECRET=your_website_webhook_secret

# AI 配置
AI_PROVIDER=google # google, openai, claude, llama
GOOGLE_API_KEY=your_google_api_key
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key
LLAMA_API_KEY=your_llama_api_key
VERTEX_AI_PROJECT_ID=your_vertex_ai_project_id
VERTEX_AI_LOCATION=us-central1
GOOGLE_MODEL=gemini-pro
OPENAI_MODEL=gpt-4
CLAUDE_MODEL=claude-3-opus-20240229
LLAMA_MODEL=llama-3-70b-instruct

# 向量數據庫配置
VECTOR_DB_PROVIDER=pinecone # pinecone, milvus
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=customer-messaging

# 日誌配置
LOG_LEVEL=info

# 監控配置
ENABLE_METRICS=true
METRICS_PORT=9090